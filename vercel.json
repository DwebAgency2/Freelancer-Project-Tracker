{
  "version": 2,
  "trailingSlash": false,
  "builds": [
    {
      "src": "backend/server.js",
      "use": "@vercel/node"
    },
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/backend/server.js"
    },
    {
      "source": "/assets/(.*)",
      "destination": "/frontend/assets/$1"
    },
    {
      "source": "/vite.svg",
      "destination": "/frontend/vite.svg"
    },
    {
      "source": "/((?!api/).*)",
      "destination": "/frontend/index.html"
    }
  ]
}